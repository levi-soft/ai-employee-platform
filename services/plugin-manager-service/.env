
# Plugin Manager Service Environment Configuration

# Service Configuration
SERVICE_NAME=plugin-manager-service
PORT=9005
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_employee_platform

# Redis for Caching
REDIS_URL=redis://redis:6379
CACHE_TTL=3600
PLUGIN_CACHE_TTL=7200

# Plugin Execution Environment
SANDBOX_ENABLED=true
SANDBOX_TIMEOUT=30000
SANDBOX_MEMORY_LIMIT=128
MAX_CONCURRENT_EXECUTIONS=10
EXECUTION_TIMEOUT=60000

# Plugin Storage
PLUGIN_STORAGE_DIR=plugins/storage
PLUGIN_UPLOAD_DIR=uploads/plugins
MAX_PLUGIN_SIZE=52428800
ALLOWED_PLUGIN_TYPES=zip,tar.gz

# Plugin Marketplace
MARKETPLACE_ENABLED=true
OFFICIAL_PLUGIN_REGISTRY=https://plugins.ai-employee-platform.com
ALLOW_THIRD_PARTY_PLUGINS=true
PLUGIN_VERIFICATION_REQUIRED=false

# Security Configuration
PLUGIN_SIGNATURE_VERIFICATION=false
TRUSTED_PUBLISHERS=official,verified
SCAN_PLUGINS_FOR_MALWARE=false
QUARANTINE_SUSPICIOUS_PLUGINS=true

# Plugin SDK
SDK_VERSION=1.0.0
API_DOCUMENTATION_URL=http://localhost:3002/docs
PLUGIN_DEVELOPMENT_MODE=true

# Version Management
PLUGIN_ROLLBACK_ENABLED=true
KEEP_PLUGIN_VERSIONS=5
AUTO_UPDATE_ENABLED=false
UPDATE_CHECK_INTERVAL=86400000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000
PLUGIN_EXECUTION_RATE_LIMIT=20

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_PLUGIN_EXECUTIONS=true
LOG_PLUGIN_ERRORS=true

# Monitoring
PLUGIN_HEALTH_CHECK_ENABLED=true
EXECUTION_METRICS_ENABLED=true
PERFORMANCE_MONITORING=true

# Integration
AUTH_SERVICE_URL=http://auth-service:9001
USER_MANAGEMENT_SERVICE_URL=http://user-management-service:9004

# Plugin Categories
SUPPORTED_CATEGORIES=productivity,automation,data-analysis,communication,integration
DEFAULT_CATEGORY=productivity

# Resource Limits
MAX_PLUGINS_PER_USER=50
MAX_PLUGIN_STORAGE_PER_USER=1073741824
MAX_PLUGIN_EXECUTIONS_PER_HOUR=1000

