
# Billing Service Environment Configuration

# Service Configuration
SERVICE_NAME=billing-service
PORT=9003
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_employee_platform

# Redis for Caching
REDIS_URL=redis://redis:6379
CACHE_TTL=3600

# Stripe Configuration
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Currency and Pricing
DEFAULT_CURRENCY=USD
CREDIT_PACKAGE_PRICING={"small": 1000, "medium": 5000, "large": 10000}
CREDIT_COSTS={"gpt-4": 0.03, "gpt-3.5-turbo": 0.002, "claude-3": 0.015, "gemini-pro": 0.001}

# Budget Configuration
DEFAULT_BUDGET_LIMIT=100
BUDGET_WARNING_THRESHOLD=0.80
BUDGET_CRITICAL_THRESHOLD=0.95
AUTO_TOPUP_ENABLED=false
AUTO_TOPUP_THRESHOLD=0.10
AUTO_TOPUP_AMOUNT=50

# Email for Billing Notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
BILLING_EMAIL_FROM="AI Platform Billing <billing@example.com>"

# Invoice Configuration
INVOICE_GENERATION_ENABLED=true
INVOICE_SEND_EMAIL=true
INVOICE_PREFIX=INV
TAX_RATE=0.00

# Payment Configuration
PAYMENT_RETRY_ATTEMPTS=3
PAYMENT_RETRY_DELAY=86400000
FAILED_PAYMENT_GRACE_PERIOD=259200000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_FINANCIAL_OPERATIONS=true

# Security
ENCRYPT_FINANCIAL_DATA=true
PCI_COMPLIANCE_MODE=false

# Analytics
USAGE_ANALYTICS_ENABLED=true
COST_ANALYTICS_RETENTION_DAYS=90

# Frontend URL for payment redirects
FRONTEND_URL=http://localhost:3000
PAYMENT_SUCCESS_URL=http://localhost:3000/billing/success
PAYMENT_CANCEL_URL=http://localhost:3000/billing/cancel

