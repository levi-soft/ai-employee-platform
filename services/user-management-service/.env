
# User Management Service Environment Configuration

# Service Configuration
SERVICE_NAME=user-management-service
PORT=9004
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_employee_platform

# Redis for Caching
REDIS_URL=redis://redis:6379
CACHE_TTL=3600
USER_CACHE_TTL=1800

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_DIR=uploads/avatars
ALLOWED_FILE_TYPES=jpg,jpeg,png,gif
MAX_AVATAR_SIZE=2097152

# User Profile Configuration
PROFILE_COMPLETION_REQUIRED=false
PROFILE_FIELDS_REQUIRED=name,email
MAX_BIO_LENGTH=500
MAX_DISPLAY_NAME_LENGTH=50

# Activity Tracking
TRACK_USER_ACTIVITY=true
ACTIVITY_RETENTION_DAYS=30
SESSION_TIMEOUT=3600000

# Search Configuration
SEARCH_RESULTS_LIMIT=50
ENABLE_FUZZY_SEARCH=true
SEARCH_CACHE_TTL=300

# Permission Management
PERMISSION_CACHE_TTL=1800
ROLE_HIERARCHY_CACHE_TTL=3600

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined
LOG_USER_ACTIONS=true

# Privacy and GDPR
DATA_RETENTION_DAYS=2555
ENABLE_DATA_EXPORT=true
ENABLE_ACCOUNT_DELETION=true
ANONYMIZE_DELETED_USERS=true

# Audit Configuration
AUDIT_USER_CHANGES=true
AUDIT_RETENTION_DAYS=365

# Integration
AUTH_SERVICE_URL=http://auth-service:9001
NOTIFICATION_SERVICE_URL=http://notification-service:9005

# Email Templates
WELCOME_EMAIL_ENABLED=true
PROFILE_UPDATE_EMAIL_ENABLED=false

# Security
REQUIRE_PASSWORD_CHANGE_DAYS=90
ENFORCE_STRONG_PASSWORDS=true
PREVENT_PASSWORD_REUSE_COUNT=5

