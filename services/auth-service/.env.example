
# Auth Service Environment Configuration

# Service Configuration
SERVICE_NAME=auth-service
PORT=9001
NODE_ENV=development

# Database
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/ai_employee_platform

# Redis for Sessions
REDIS_URL=redis://redis:6379
SESSION_SECRET=your_session_secret_change_this_in_production
SESSION_TTL=86400

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_change_this_in_production

# Password Hashing
BCRYPT_ROUNDS=12

# Email for Verification (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
EMAIL_FROM="AI Employee Platform <noreply@example.com>"

# OAuth Configuration (Optional)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# SMS for OTP (Optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_MS=900000

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# Security
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=900000
REQUIRE_EMAIL_VERIFICATION=false
REQUIRE_MFA=false

# Frontend URLs for redirects
FRONTEND_URL=http://localhost:3000
ADMIN_DASHBOARD_URL=http://localhost:3001

